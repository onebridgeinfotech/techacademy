# TechAcademy Environment Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

# Application Configuration
NODE_ENV={{ environment }}
PORT=3000
APP_NAME={{ app_name }}
APP_VERSION={{ app_version | default('1.0.0') }}

# Database Configuration
DB_HOST={{ db_host | default('localhost') }}
DB_PORT={{ db_port | default('5432') }}
DB_NAME={{ db_name | default('techacademy') }}
DB_USER={{ db_user | default('techacademy') }}
DB_PASSWORD={{ db_password }}
DB_SSL={{ db_ssl | default('false') }}

# JWT Configuration
JWT_SECRET={{ jwt_secret }}
JWT_EXPIRES_IN={{ jwt_expires_in | default('7d') }}
JWT_REFRESH_EXPIRES_IN={{ jwt_refresh_expires_in | default('30d') }}

# AWS Configuration
AWS_REGION={{ aws_region | default('us-west-2') }}
AWS_ACCESS_KEY_ID={{ aws_access_key_id }}
AWS_SECRET_ACCESS_KEY={{ aws_secret_access_key }}
S3_BUCKET={{ s3_bucket }}

# Email Configuration
SMTP_HOST={{ smtp_host | default('smtp.gmail.com') }}
SMTP_PORT={{ smtp_port | default('587') }}
SMTP_USER={{ smtp_user }}
SMTP_PASS={{ smtp_pass }}
SMTP_SECURE={{ smtp_secure | default('false') }}

# Payment Configuration
PAYMENT_GATEWAY_KEY={{ payment_gateway_key }}
PAYMENT_GATEWAY_SECRET={{ payment_gateway_secret }}
PAYMENT_GATEWAY_MODE={{ payment_gateway_mode | default('sandbox') }}

# File Upload Configuration
MAX_FILE_SIZE={{ max_file_size | default('10485760') }}
UPLOAD_PATH={{ upload_path | default('/opt/techacademy/uploads') }}

# Logging Configuration
LOG_LEVEL={{ log_level | default('info') }}
LOG_FILE={{ log_file | default('/var/log/techacademy/app.log') }}

# Security Configuration
BCRYPT_ROUNDS={{ bcrypt_rounds | default('12') }}
RATE_LIMIT_WINDOW={{ rate_limit_window | default('900000') }}
RATE_LIMIT_MAX={{ rate_limit_max | default('100') }}

# CORS Configuration
CORS_ORIGIN={{ cors_origin | default('*') }}
CORS_CREDENTIALS={{ cors_credentials | default('true') }}

# Session Configuration
SESSION_SECRET={{ session_secret }}
SESSION_COOKIE_MAX_AGE={{ session_cookie_max_age | default('86400000') }}

# Monitoring Configuration
ENABLE_METRICS={{ enable_metrics | default('true') }}
METRICS_PORT={{ metrics_port | default('9090') }}

# Development Configuration
DEBUG={{ debug | default('false') }}
VERBOSE_LOGGING={{ verbose_logging | default('false') }}




